    <div class="card w-100 ">
        <div class="card-body">
            <h5 class="card-title text-left f-w-400"><i class="fas fa-th-list"></i> RECURSO</h5>
            <div class="bs-component">
                <table class="table w-100">
                    <tbody>
                        <tr class="">
                            <th class="f-w-300 w-20">NOMBRE</th>
                            <td class="w-80 small">@Model.API_PROY_DET.Nombre</td>
                        </tr>
                        <tr class="">
                            <td class="w-100 small bg-transparent border border-light rounded" colspan="2">
                                @Html.Raw(Model.API_PROY_DET.Descrip.Replace("\n", "<br>").TrimStart().Trim())
                            </td>
                        </tr>
                        <tr class="">
                            <th class="f-w-300 w-20">ENDPOINT</th>
                            <td class="w-80 text-info">
                                <span class="badge badge-light f-w-400">
                                    @Model.API_PROY_CAB.URL@Model.API_PROY_DET.URL
                                </span>
                            </td>
                        </tr>
                        <tr class="">
                            <th class="f-w-300">HTTP METHOD</th>
                            <td>
                                @foreach (var item in Model.API_ATTR_HTTP.Where(m => m.HAtrID == Model.API_PROY_DET.HAtrID).ToList())
                                {
                                    <span class="badge badge-light f-w-400">
                                        @item.Value.ToUpper()
                                    </span>
                                    break;
                                }
                            </td>
                        </tr>
                        <tr class="">
                            <th class="f-w-300 w-20">CONTENT TYPE</th>
                            <td class="w-80 text-warning">
                                @foreach (var item in Model.API_ATTR_CONT_TYPE.Where(m => m.CTAtrID == Model.API_PROY_DET.CTAtrID).ToList())
                                {
                                    <span class="badge badge-light f-w-400">
                                        @item.Value
                                    </span>
                                    break;
                                }
                            </td>
                        </tr>

                    </tbody>
                </table>

                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#tab1"><i class="fas fa-angle-double-right  text-warning"></i>  REQUEST</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab2"><i class="fas fa-angle-double-left text-warning"></i>  RESPONSE</a>
                    </li>
                    @*<li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tab3"><i class="fas fa-exclamation-circle text-danger"></i> CÓDIGOS DE ERRORES</a>
                        </li>*@
                </ul>

                <div class="tab-content">
                    <div id="tab1" class="container tab-pane  pt-2 active">
                        <table class="table ">
                            <tbody>
                                <tr class="w-100 border-0">
                                    <td class="small bg-transparent border border-light rounded" colspan="2" name="code">
                                        <pre>@Html.Raw(Model.API_PROY_DET.Request.Replace("\n", "<br>").TrimStart().Trim())</pre>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div id="tab2" class="container tab-pane fade  pt-2">
                        <table class="table ">
                            <tbody>
                                <tr class="">
                                    <td class="small bg-transparent border border-light rounded" colspan="2" name="code">
                                        <pre>@Html.Raw(Model.API_PROY_DET.Response.Replace("\n", "<br>").TrimStart().Trim())</pre>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
