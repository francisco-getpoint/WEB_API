@{
    Layout = "~/Views/Shared/_Layout_NULL.cshtml";
    ViewBag.Title = "API - GESTIÓN";
}

<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block">
                        <img src="holder.js/500x600">
                    </div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">@ViewBag.Title</h1>
                            </div>
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true)
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" placeholder="USUARIO" required maxlength="15" name="u" value="" />
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control input-lg" placeholder="CONTRASEÑA" required maxlength="15" name="p" value="" />
                                </div>
                                <button type="submit" class="btn btn-primary btn-block btn-lg">INGRESAR</button>

                                if (ViewBag.ERR != null && ViewBag.ERR != "0")
                                {
                                    <div class="alert alert-danger m-2 small">
                                        @Html.Raw(ViewBag.ERR)
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
